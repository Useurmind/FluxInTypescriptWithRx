{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: install",
            "type": "shell",
            "windows": {
                "command": "npm i"
            },
            "options": {
                "cwd": "packages\\rfluxx"
            },
            "group": "none"
        },
        {
            "label": "tsc: build",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "",
            "problemMatcher": [
                "$tsc"
            ],
            "options": {
                "cwd": "packages\\rfluxx"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "tsc: watch",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "options": {
                "cwd": "packages\\rfluxx"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "webpack-dev-server: run",
            "type": "shell",
            "windows": {
                "command": ".\\node_modules\\.bin\\webpack-dev-server"
            },
            "options": {
                "cwd": "packages\\rfluxx"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "tslint: run",
            "type": "shell",
            "command": "./node_modules/.bin/tslint -p tsconfig.json",
            "options": {
                "cwd": "./packages/rfluxx"
            },
            "problemMatcher": [
                "$tslint5"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}