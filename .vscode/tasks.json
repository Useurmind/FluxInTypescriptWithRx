{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm i",
            "type": "shell",
            "windows": {
                "command": "npm i"
            },
            "group": "none"
        },
        {
            "label": "tsc watch",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "webpack",
            "type": "shell",
            "windows": {
                "command": ".\\node_modules\\.bin\\webpack-cli --config webpack.js"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "webpack-dev-server",
            "type": "shell",
            "windows": {
                "command": ".\\node_modules\\.bin\\webpack-dev-server --config webpack.js"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "http-server",
            "type": "shell",
            "windows": {
                "command": ".\\node_modules\\.bin\\http-server .\\example"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}